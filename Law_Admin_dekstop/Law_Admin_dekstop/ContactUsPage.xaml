<Page x:Class="Law_Admin_dekstop.ContactUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ContactUsPage"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Hero Section -->
            <Grid>
                <Image Source="C:\Users\Asus\Documents\Project\github\Law_Admin_dekstop\Law_Admin_dekstop\Assets\img31.jpg" 
                       Stretch="UniformToFill" Height="700" Width="1700"/>
                <Grid Background="#80000000">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Contact Us" FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                        <TextBlock Text="We’d love to hear from you. Feel free to reach out to us anytime!"
                                   FontSize="20" Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Contact Information Section -->
            <StackPanel Margin="20" Background="#F5F5F5" >
                <TextBlock Text="Get in Touch" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,20"/>

                <StackPanel Margin="10">
                    <TextBlock Text="Our Office" FontWeight="Bold" FontSize="24" TextAlignment="Center"/>
                    <TextBlock Text="317 Darley Rd, Colombo 01000, Sri Lanka"
                               FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <TextBlock Text="Email Us" FontWeight="Bold" FontSize="24" TextAlignment="Center"/>
                    <TextBlock Text="info@lawadmin.com"
                               FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <TextBlock Text="Call Us" FontWeight="Bold" FontSize="24" TextAlignment="Center"/>
                    <TextBlock Text="+012 345 6789"
                               FontSize="16" TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <!-- Contact Form Section -->
            <StackPanel Margin="20" Background="#FFF3CD" >
                <TextBlock Text="Send Us a Message" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,20"/>

                <TextBox Text="Your Name" FontSize="16" Margin="0,10" Padding="10" Width="400" HorizontalAlignment="Center"/>
                <TextBox Text="Your Email" FontSize="16" Margin="0,10" Padding="10" Width="400" HorizontalAlignment="Center"/>
                <TextBox Text="Your Message" FontSize="16" Margin="0,10" Padding="10" Width="400" Height="100" 
                         HorizontalAlignment="Center" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Button Content="Submit" Width="150" Height="50" Background="Orange" Foreground="White" 
                        FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Business Hours Section -->
            <StackPanel Background="#FFF3CD"  Margin="20" >
                <TextBlock Text="Business Hours" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                <StackPanel Margin="10">
                    <TextBlock Text="Monday - Friday: 9:00 AM - 6:00 PM" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Saturday: 10:00 AM - 4:00 PM" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Sunday: Closed" FontSize="16" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- FAQ Section -->
            <StackPanel Background="#E0E0E0"  >
                <TextBlock Text="Frequently Asked Questions" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>

                <Expander Header="What services do you offer?" FontSize="20" FontWeight="Bold" Background="DarkGoldenrod" Foreground="White" Margin="0,10,0,0">
                    <TextBlock Text="We provide legal services in Criminal Law, Family Law, Corporate Law, and specialized legal needs. Contact us to learn more."
                               TextWrapping="Wrap" Padding="10"/>
                </Expander>

                <Expander Header="How can I schedule a consultation?" FontSize="20" FontWeight="Bold" Background="DarkGoldenrod" Foreground="White" Margin="0,10,0,10">
                    <TextBlock Text="You can schedule a consultation by calling us or filling out the contact form above. We will get back to you shortly."
                               TextWrapping="Wrap" Padding="10"/>
                </Expander>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
