<Window x:Class="Law_Admin_dekstop.EditAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Appointment" Height="450" Width="500" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Edit Appointment" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Name -->
            <TextBlock Text="Name" FontWeight="Bold" />
            <TextBox x:Name="NameTextBox" Margin="0,5" />

            <!-- Email -->
            <TextBlock Text="Email" FontWeight="Bold" />
            <TextBox x:Name="EmailTextBox" Margin="0,5" />

            <!-- Appointment Date -->
            <TextBlock Text="Appointment Date" FontWeight="Bold" />
            <DatePicker x:Name="AppointmentDatePicker" Margin="0,5" />

            <!-- Time Slot -->
            <TextBlock Text="Time Slot" FontWeight="Bold" />
            <TextBox x:Name="TimeSlotTextBox" Margin="0,5" />

            <!-- Law Type -->
            <TextBlock Text="Law Type" FontWeight="Bold" />
            <TextBox x:Name="LawTypeTextBox" Margin="0,5" />

            <!-- Lawyer -->
            <TextBlock Text="Lawyer" FontWeight="Bold" />
            <TextBox x:Name="LawyerTextBox" Margin="0,5" />

            <!-- Save Button -->
            <Button Content="Save Changes" Click="SaveButton_Click" Background="Orange" Foreground="White" 
                    FontSize="16" FontWeight="Bold" Margin="0,20,0,0" HorizontalAlignment="Center" Width="150" />
        </StackPanel>
    </Grid>
</Window>
