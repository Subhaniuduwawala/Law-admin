<Page x:Class="Law_Admin_dekstop.AttorneysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AttorneysPage"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Hero Section -->
            <Grid>
                <Image Source="C:\Users\Asus\Documents\Project\github\Law_Admin_dekstop\Law_Admin_dekstop\Assets\img9.jpg" 
                       Stretch="UniformToFill" Height="700" Width="1700"/>
                <Grid >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Our Attorneys" FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                        <TextBlock Text="Explore the expertise of our highly qualified team of attorneys."
                                   FontSize="20" Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Criminal Law Section -->
            <StackPanel Margin="20" Background="SlateGray" >
                <TextBlock Text="Criminal Law" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="These lawyers specialize in defending individuals accused of crimes or representing clients in criminal cases."
                           FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,20"/>
                <StackPanel Margin="10">
                    <TextBlock Text="Criminal Defense Law Specialist" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mrs. Samanthi" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Defends clients accused of criminal activities like theft, assault, or fraud."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Domestic Violence Lawyer" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mr. Nimesh" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Represents clients in domestic abuse cases and provides legal protection."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Juvenile Defense Lawyer" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mr. Herath" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Focuses on representing minors accused of crimes."
                               TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <!-- Family Law Section -->
            <StackPanel Margin="20" Background="SlateGray" >
                <TextBlock Text="Family Law" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="These lawyers handle legal matters related to families, relationships, and domestic issues."
                           FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,20"/>
                <StackPanel Margin="10">
                    <TextBlock Text="Family Law Specialist" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mr. Samarawikrama" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Assists clients with legal separation, divorce proceedings, and alimony."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Child Custody Lawyer" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mrs. Wijethunga" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Advocates for parental rights and helps clients secure custody of their children."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Divorce Lawyer" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mrs. Seananayaka" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Handles legal separations, alimony, and asset division during divorce."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>

            <!-- Corporate Law Section -->
            <StackPanel Margin="20" Background="SlateGray" >
                <TextBlock Text="Corporate Law" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="These lawyers work with businesses and corporations on legal compliance, contracts, and disputes."
                           FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,20"/>
                <StackPanel Margin="10">
                    <TextBlock Text="Corporate Law Specialist" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="Mr. Krishanth" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                    <TextBlock Text="Drafts and reviews business agreements like vendor contracts, NDAs, and employee contracts."
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>

            <!-- Call to Action Section -->
            <StackPanel Background="#FFEB3B"  Margin="20">
                <TextBlock Text="Need Legal Assistance?" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Contact us today to schedule a consultation with our experienced attorneys."
                           FontSize="18" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,20"/>
                <Button Content="Schedule a Consultation" Width="250" Height="50" Background="Orange" Foreground="White" 
                        FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
