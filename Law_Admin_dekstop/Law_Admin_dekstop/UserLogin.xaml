<Window x:Class="Law_Admin_dekstop.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UserLogin"
        Height="600"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        AllowsTransparency="True"
        WindowStyle="None">

    <!-- Border around the entire content -->
    <Border BorderBrush="Orange" BorderThickness="3" CornerRadius="10">
        <Grid>
            <!-- Top Exit Button -->
            <Button Content="X"
                    Width="30"
                    Height="30"
                    Background="White"
                    Foreground="Red"
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Click="ExitButton_Click"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>

            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">


                <Image Source="C:\Users\Asus\Documents\Project\github\Law_Admin_dekstop\Law_Admin_dekstop\logo1.jpg" Width="80" Height="80" Margin="0,15,0,0" />


                <!-- Login Title -->
                <TextBlock Text="Login" FontSize="30" FontWeight="Bold" Foreground="Orange" 
                           HorizontalAlignment="Center" Margin="0,10"/>


                <!-- Username -->
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="UserName" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameBox" Height="28" FontSize="14" 
                             BorderBrush="Orange" BorderThickness="2" />
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Password" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" Height="28" FontSize="14" 
                                 BorderBrush="Orange" BorderThickness="2" />
                </StackPanel>

                <!-- Submit Button -->
                <Button Content="Login" Width="100" Height="35" Background="Orange" Foreground="White"
                        BorderThickness="2" FontSize="14" FontWeight="Bold" Margin="0,20,0,0"
                        HorizontalAlignment="Center" Click="SubmitButton_Click" BorderBrush="White"/>

                <Button Content="Sign Up" Width="100" Height="35" Background="Gray" Foreground="White"
                        BorderThickness="2" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"
                        HorizontalAlignment="Center" Click="SignupButton_Click" />

            </StackPanel>
        </Grid>
    </Border>
</Window>
